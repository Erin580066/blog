<%- include ./public/headerIndex %>
<% posts.forEach(function(post, index){ %>
<div class="panel panel-info">
    <div class="panel-body">
        <div>
            <h2><a href="/u/<%= post.name %>/<%= post.title %>"><%= post.title %></a></h2>

            <p class="info">作者：<a href="/u/<%= post.name %>"><%= post.name %></a> <span>| 日期：<%= post.time.time %></span></p>
            <p>
                <% post.tags.forEach(function(tag,index){ %>
                <% if(tag){ %>
                <span class="label label-info"><a class="tag" href="/tags/<%= tag %>"><%= tag %></a></span>
                <% } %>
                <% }) %>
            </p>
        </div>
        <div class="post" style="max-height: 200px;overflow: hidden;margin-bottom: 15px;background: #f9f9f9;"><%- post.post %></div>
        <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
    </div>
</div>
<% }) %>
<%- include ./public/footerIndex %>