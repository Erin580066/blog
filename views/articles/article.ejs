<%- include ../public/header %>
<div style="padding: 10px 0 15px;border-bottom: 1px dashed #cccccc;">
    <% if(user && (user.name == post.name)){ %>
    <div>
        <span><a class="btn btn-primary" href="/edit/<%= post.name %>/<%= post.title %>">编辑</a></span>
        <span><a class="btn btn-danger" href="/remove/<%= post.name %>/<%= post.title %>">删除</a></span>
    </div>
    <% } %>
    <div>
        <p class="info">作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 日期：<%= post.time.time %></p>
        <p>
            <% post.tags.forEach(function(tag,index){ %>
            <% if(tag){ %>
            <span class="label label-info"><a class="tag" href="/tags/<%= tag %>"><%= tag %></a></span>
            <% } %>
            <% }) %>
        </p>
    </div>
    <div class="post"><%- post.post %></div>
    <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
</div>

<%- include comment %>
<%- include ../public/footer %>