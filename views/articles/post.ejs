<%- include ../public/header %>

<form class="form" method="post">
    <div class="form-group">
        标题 <br/>
        <input type="text" class="form-control" name="title" placeholder="请输入标题"/>
    </div>
    <div class="form-group">
        标签 <br/>
        <input type="text" class="form-control" name="tag1" placeholder="标签1"/>
        <input type="text" class="form-control" name="tag2" placeholder="标签2"/>
        <input type="text" class="form-control" name="tag3" placeholder="标签3"/>
    </div>
    <div class="from-group">
        正文 <br/>
        <textarea class="form-control" name="post" rows="20" cols="100" placeholder="请输入内容"></textarea>
    </div>
    <div class="from-group">
        <input class="btn btn-primary" type="submit" value="发表"/>
    </div>
</form>

<%- include ../public/footer %>